# ========== 서버 설정 ==========
PORT=3000
NODE_ENV=development

# ========== 카카오맵 API ==========
# https://developers.kakao.com/
KAKAO_REST_API_KEY=your_kakao_rest_api_key_here

# ========== JWT 시크릿 키 ==========
# 프로덕션에서는 강력한 랜덤 문자열 사용 권장
JWT_SECRET=myMapBot_super_secret_key_2026_!@#$%
JWT_REFRESH_SECRET=myMapBot_refresh_secret_key_2026_!@#$%

# ========== PortOne (구 아임포트) ==========
# https://portone.io/
PORTONE_IMP_KEY=imp_test_key
PORTONE_IMP_SECRET=imp_test_secret

# ========== Toss Payments ==========
# https://docs.tosspayments.com/
TOSS_CLIENT_KEY=test_ck_xxxxx
TOSS_SECRET_KEY=test_sk_xxxxx

# ========== 이메일 발송 (선택사항) ==========
# SMTP 설정
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ========== 데이터베이스 (선택사항) ==========
# MongoDB 연결
MONGODB_URI=mongodb://localhost:27017/mymapbot

# PostgreSQL 연결
DATABASE_URL=postgresql://user:password@localhost:5432/mymapbot

# ========== 파일 업로드 (선택사항) ==========
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=mymapbot-uploads
AWS_REGION=ap-northeast-2

# ========== 외부 서비스 (선택사항) ==========
# 알림톡 (카카오 알림톡)
KAKAO_ALIMTALK_API_KEY=your_alimtalk_api_key

# SMS (예: 문자메시지 발송)
SMS_API_KEY=your_sms_api_key

